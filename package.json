{
  "name": "global-flavors-buffet",
  "version": "1.0.0",
  "description": "A responsive website for a modern buffet restaurant showcasing diverse culinary offerings",
  "main": "index.js",
  "scripts": {
    "build": "tailwindcss -i ./css/tailwind-input.css -o ./css/tailwind-output.css",
    "watch": "tailwindcss -i ./css/tailwind-input.css -o ./css/tailwind-output.css --watch",
    "serve": "live-server --port=8080",
    "dev": "concurrently \"npm run watch\" \"npm run serve\""
  },
  "keywords": [
    "restaurant",
    "buffet",
    "food",
    "culinary",
    "responsive",
    "website"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "live-server": "^1.2.2",
    "tailwindcss": "^3.3.3"
  }
}